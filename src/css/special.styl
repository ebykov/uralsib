@import 'mq'

@import 'functions'
@import 'keyframes'

colors = {
  main: #002D72,
  extra: #FFD100,
  correct: #43B02A,
  incorrect: #FF6C6C,
}

.wrapper
  display: flex
  justify-content: center
  align-items: center
  min-height: 100vh

.uralsib
  position: relative
  z-index: 99
  display: flex
  justify-content: center
  align-items: flex-start
  width: 1060px
  max-width: 100%
  min-height: 568px
  padding: 45px 10px 0
  font-size: 16px
  line-height: normal
  text-size-adjust: 100%
  border-radius: 0 10px 0 0
  background-color: colors.main
  overflow: hidden

  @media $mq.iphone6
    min-height: 600px

  @media $mq.not_mobile
    align-items: center
    padding: 0 10px
    font-size: 18px

  & *
  & *:before
  & *:after
    box-sizing: border-box

  svg
    display block
    fill currentColor
    pointer-events none

  & b
    font-weight: 700

  & button
    font-family: inherit
    font-size: inherit
    outline: none
    cursor: pointer
    appearance: none

  &__bg-movie
    position: absolute
    z-index: 1
    top: 0
    left: 0
    width: 36%
    max-width: 231px !important

  &__bg-business
    position: absolute
    z-index: 1
    bottom: 0
    right: 0
    width: 52%
    max-width: 331px !important

  &__logo
    position: absolute
    z-index: 2
    top: 5px
    right: 12px
    display: block
    width: 148px
    height: 30px
    color: #ffffff !important
    border: 0 !important
    transition: opacity .2s

    &:hover
      opacity: .6

      @media (hover none), (hover on-demand)
        opacity: 1

    @media $mq.not_mobile
      top: 8px
      right: 22px
      width: 197px
      height: 40px

    & svg
      width: 100%
      height: 100%

  &-enter
    width: 500px
    max-width: 100%
    margin-top: 30px

    @media $mq.not_mobile
      margin-top: 0

    &__title
      position: relative
      z-index: 2
      color: #ffffff !important
      font-size: 32px
      font-weight: 700
      line-height: 1.417em
      border: 0 !important

      a&
        transition: opacity .2s

        @media (hover none), (hover on-demand)
          opacity: 1

        &:hover
          opacity: .6

      @media $mq.not_mobile
        font-size: 48px

    &__description
      position: relative
      z-index: 2
      margin-top: 17px
      color: #ffffff
      line-height: 1.5em

    &__start-btn
      position: relative
      z-index: 2
      width: 170px
      height: 50px
      padding: 0
      margin-top: 42px
      color: #ffffff
      font-size: 18px
      font-weight: 700
      border: 2px solid #ffffff
      border-radius: 5px
      background-color: transparent
      transition: color .2s, background-color .2s

      &:hover
        color: colors.main
        background-color: #ffffff

        @media (hover none), (hover on-demand)
          color: #ffffff
          background-color: transparent

  &-q
    position: relative
    width: 400px
    max-width: 100%

    &__pages
      position: absolute
      top: -30px
      left: 0
      color: #7EB1FF
      font-weight: 700

      @media $mq.not_mobile
        top: -38px
        left: 0
        right: 0
        width: 100%
        text-align: center

    &__card
      position: relative
      z-index: 3
      min-height: 400px

      @media $mq.not_mobile
        min-height: 480px

    &__cards
      position: absolute
      z-index: 1
      top: 100%
      left: 0
      right: 0

      & div
        position: absolute
        bottom: -5px
        left: 0
        right: 0
        margin: 0 auto
        width: 100%
        height: 380px
        border-radius: 10px
        background-color: #ffffff
        box-shadow: 0px 3px 5px rgba(0, 0, 0, .25)

        @media $mq.not_mobile
          height: 480px

        &:nth-child(1)
          z-index: 3
          width: 96%

        &:nth-child(2)
          z-index: 2
          bottom: -10px
          width: 92%

        &:nth-child(3)
          bottom: -15px
          width: 88%

    &__option
      position: absolute
      z-index: 2
      bottom: -15px
      display: flex
      justify-content: center
      align-items: center
      width: 70px
      height: 70px
      color: #ffffff
      border: 10px solid colors.main
      border-radius: 100%
      background-color: colors.main
      cursor: pointer
      box-sizing: content-box
      user-select: none
      transition: transform .2s, background-color .1s

      @media $mq.iphone6
        bottom: -20px

      @media $mq.not_mobile
        top: 14px
        bottom: 0
        margin: auto 0
        width: 90px
        height: 90px

      &:hover
        color: colors.main
        background-color: #ffffff

        @media (hover none), (hover on-demand)
          color: #ffffff
          background-color: colors.main

      &.is-hide
        opacity: 0
        visibility: hidden

      &--left
        left: 50%
        transform translate3d(-100%, 100%, 0)

        @media $mq.not_mobile
          left: auto
          right: 100%
          transform translate3d(-3px, 0, 0)

      &--right
        right: 50%
        transform translate3d(100%, 100%, 0)

        @media $mq.not_mobile
          left: 100%
          right: auto
          transform translate3d(3px, 0, 0)

      ^[0]-q.is-correct &
      ^[0]-q.is-incorrect &
        z-index: 4
        color: colors.main
        background-color: #ffffff
        cursor: default

        &--left
          transform translate3d(-50%, calc(100% - 20px), 0)

          @media $mq.not_mobile
            transform: translate3d(14px, 0, 0)

        &--right
          transform translate3d(50%,  calc(100% - 20px), 0)

          @media $mq.not_mobile
            transform: translate3d(-14px, 0, 0)

      ^[0]-q.is-correct &
        color: colors.correct

      ^[0]-q.is-incorrect &
        color: colors.incorrect

    &__option-icon
      position: relative
      width: 60px
      height: 60px
      color: currentColor
      border: 3px solid currentColor
      border-radius: 100%

      @media $mq.not_mobile
        width: 75px
        height: 75px

      & svg
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        margin: auto

    &__option-caption
      position: absolute
      bottom: 0
      left: 50%
      padding: 0 5px
      color: currentColor
      font-size: 14px
      font-weight: 700
      background-color: colors.main
      transform: translate3d(-50%, 14px, 0)
      transition: transform .1s

      ^[0]-q__option:hover &
        color: #ffffff
        transform: translate3d(-50%, 20px, 0)

        @media (hover none), (hover on-demand)
          color: currentColor
          transform: translate3d(-50%, 14px, 0)

      ^[0]-q.is-correct ^[0]-q__option:hover &
      ^[0]-q.is-incorrect ^[0]-q__option:hover &
        color: currentColor

      ^[0]-q.is-correct &
      ^[0]-q.is-incorrect &
        transform: translate3d(-50%, 20px, 0)

  &-card
    min-height: 400px
    overflow: hidden
    border-radius: 10px
    background-color: #ffffff
    box-shadow: 0px 3px 5px rgba(0, 0, 0, .25)
    user-select: none
    cursor: pointer

    @media $mq.not_mobile
      min-height: 480px

    &__head
      position: relative
      max-height: 280px
      overflow: hidden
      border-radius: 10px 10px 0 0
      background-color: #FFD101
      transform translate3d(0, 0, 0)
      transition: max-height .2s

      &::before
        content: ''
        display: block
        padding-top: 70%

      ^[0]-q.is-correct &
      ^[0]-q.is-incorrect &
        max-height: 50px

    &__img
      position: absolute
      top: 50%
      transform: translate3d(0, -50%, 0)
      display: block
      width: 100%
      transition: transform .2s
      pointer-events: none

    &__text
      padding: 20px 10px 10px
      color: #666666
      font-size: 16px
      line-height: 1.4em

      @media $mq.not_mobile
        padding: 28px 20px 10px 30px
        line-height: 1.625em

    &__answer
      transform: translate3d(0, -10px, 0)

      @media $mq.not_mobile
        transform: translate3d(0, -20px, 0)

    &-answer
      padding: 0 10px 5px

      @media $mq.not_mobile
        padding: 0 30px 10px 45px

      &__info
        display: flex
        align-items: flex-start
        margin-bottom: 15px

        @media $mq.not_mobile
          margin-bottom: 20px

      &__info-img
        display: block
        width: 80px
        height: 80px
        margin-right: 14px
        border-radius: 100%

        @media $mq.not_mobile
          width: 120px
          height: 120px
          margin-right: 24px

      &__info-bio
        margin-top: 25px
        color: #999999

        @media $mq.not_mobile
          margin-top: 50px

        & p
          padding: 0
          margin: 0 !important

          &:not(:last-child)
            margin-bottom: 4px !important

          @media $mq.not_mobile
            &:not(:last-child)
              margin-bottom: 8px !important

      &__title
        font-size: 20px
        font-weight: 700

        @media $mq.not_mobile
          font-size: 24px

        ^[0]-q.is-correct &
          color: colors.correct

        ^[0]-q.is-incorrect &
          color: colors.incorrect

      &__text
        margin-top: 8px
        padding-right: 15px
        color: #666666
        font-size: 16px
        line-height: 1.4em

        @media $mq.not_mobile
          margin-top: 18px
          line-height: 1.625em

      &__next-btn
        position: relative
        width: 170px
        height: 50px
        padding: 0 20px 0 0
        margin-top: 24px
        color: #666666
        font-weight: 700
        border: 2px solid #cccccc
        border-radius: 5px
        background-color: transparent
        transition: color .2s, border-color .2s, background-color .2s

        @media $mq.not_mobile
          margin-top: 44px

        & svg
          position: absolute
          top: 0
          bottom: 0
          right: 20px
          margin: auto 0

        &:hover
          color: #fff
          border-color: #666666
          background-color: #666666

          @media (hover none), (hover on-demand)
            color: #666666
            border-color: #cccccc
            background-color: transparent

  &-result
    position: relative
    width: 500px
    max-width: 100%
    margin-top: 20px

    @media $mq.not_mobile
      margin: 20px 0 0 20px

    &__img
      position: absolute
      bottom: 64px
      right: -15px

    &__text
      position: relative
      z-index: 2
      margin-bottom: 14px
      color: #fff
      line-height: 1.4em

      @media $mq.not_mobile
        line-height: 1.722em

    &__btn
      position: relative
      z-index: 2
      width: 200px
      height: 50px
      padding: 0
      margin: 0 !important
      color: colors.main
      font-weight: 700
      border: 0
      border-radius: 5px
      background-color: colors.extra
      transition: opacity .2s

      &:hover
        opacity: .6

        @media (hover none), (hover on-demand)
          opacity: 1

    &__title
      position: relative
      z-index: 2
      margin-top: 46px
      color: #ffffff
      font-size: 24px
      font-weight: 700
      line-height: 1.417em
      text-shadow: 0 0 5px #000

      @media $mq.not_mobile
        text-shadow: none

    &__subtitle
      position: relative
      z-index: 2
      margin-top: 10px
      margin-bottom: 18px
      color: #ffffff
      line-height: 1.444em
      text-shadow: 0 0 5px #000

      @media $mq.not_mobile
        text-shadow: none

    &__share
      position: relative
      z-index: 2
      min-height: 44px

  &-offer
    position: relative
    width: 500px
    max-width: 100%
    margin-top: 22px

    &__icon
      color: colors.extra

    &__text
      margin-top: 6px
      color: #ffffff
      line-height: 1.4em

      @media $mq.not_mobile
        line-height: 1.778em

      & a
        color: colors.extra !important
        border-bottom: 1px solid colors.extra !important
        transition: opacity .2s

        &:hover
          opacity: .6

          @media (hover none), (hover on-demand)
            opacity: 1

    &__block
      width: calc(100% + 10px)
      margin: 15px 0 30px -5px
      padding: 10px
      border-radius: 5px
      background-color: colors.extra

      @media $mq.not_mobile
        width: calc(100% + 30px)
        margin: 20px 0 50px -20px
        padding: 15px 20px 20px

    &__block-icon
      color: colors.main

    &__block-text
      margin: 10px 0 14px
      color: colors.main
      line-height: 1.4em

      @media $mq.not_mobile
        line-height: 1.778em

    &__block-btn
      display: block
      width: 200px
      height: 50px
      color: colors.main !important
      font-weight: 700
      line-height: 50px
      text-align: center
      border: 0 !important
      border-radius: 5px
      background: #FFFFFF
      box-shadow: 0px 5px 5px rgba(0, 0, 0, .2)
      transition: box-shadow .2s

      &:hover
        box-shadow: 0px 2px 2px rgba(0, 0, 0, .1)

    &__back-btn
      position: relative
      padding-left: 28px
      color: #ffffff
      cursor: pointer
      user-select: none
      opacity: .5
      transition: opacity .2s

      & svg
        position: absolute
        top: 50%
        left: 4px
        transform: translate3d(0, -50%, 0) scale(-1)

      @media (hover none), (hover on-demand)
        opacity: 1

      &:hover
        opacity: 1

    &__img
      position: absolute
      bottom: -35px
      right: -65px

      @media $mq.not_mobile
        right: -30px

  &-help
    position: absolute
    z-index: 99
    top: 0
    bottom: 0
    left: 0
    right: 0
    width: 100%
    height: 100%
    display: flex
    justify-content: center
    align-items: center
    background-color: rgba(0,0,0,.8);

    &__inner
      display: flex
      flex-direction: column
      align-items: center
      max-width: 220px

    &__icon
      color: colors.extra

    &__text
      margin-top: 20px
      color: #ffffff
      font-size: 18px
      font-weight: 700
      line-height: 21px

      & p
        padding 0
        margin 0 !important
        line-height inherit !important

        &:not(:last-child)
          margin-bottom: 20px !important

    &__btn
      margin-top: 34px
      width: 150px
      height: 50px
      font-size: 18px
      font-weight: 700
      border: none
      border-radius: 5px
      background-color: colors.extra


  .likely
    &--custom
      display: flex

    &__widget
      flex-shrink: 0
      display: flex
      align-items: center
      justify-content: center
      min-width: 58px
      height: 44px
      color: #BFCBDC
      border: 1px solid currentColor
      background-color: transparent
      cursor: pointer

      &:not(:last-child)
        margin-right: 5px

      &:hover
        color: colors.main
        border-color: #BFCBDC
        background-color: #BFCBDC

      @media $mq.iphone6
        &:not(:last-child)
          margin-right: 10px

      @media $mq.not_mobile
        &--facebook
          padding: 0 20px 0 8px

    &__counter
      display: none

    &__icon
      background-color: transparent

      & svg
        display: block
        width: 24px
        height: @width
        fill: currentColor

      &--vkontakte
        & svg
          width: 28px
          height: @width

      &--facebook

        @media $mq.not_mobile
          margin-right: 6px

    &__button
      display: none
      line-height: 1

      @media $mq.not_mobile
        display: block
